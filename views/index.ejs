<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous" />
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="shortcut icon" href="#" />
  <script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
  <title>Center - Games & Games</title>
</head>

<body>
  <div class="container-fluid bienvenido">
    <div class="container bienvenido-content">
      <h1 class="fw-bold logged-message">
        Bienvenido <%= user.name %>
      </h1>
      <a href="/api/carrito">
        <button class="btn btn-primary desloguear">
          ver carrito
        </button>
      </a>
      <a href="/profile">
        <button class="btn btn-primary desloguear">
          Mi perfil
        </button>
      </a>
      <a href="/logout">
        <button class="btn btn-primary desloguear">
          Log out
        </button>
      </a>
    </div>
  </div>
  <div class="container mt-5">
    <div class="bg-light text-dark container">
      <div class="row border-bottom">
        <div class="col-4 p-4 fw-bold">Nombre</div>
        <div class="col-4 p-4 fw-bold">Precio</div>
        <div class="col-4 p-4 fw-bold">Foto</div>
      </div>
      <% products.forEach(function(product) { %>
      <div class="row border-bottom">
        <div class="col-4 p-4"><%= product.name %></div>
        <div class="col-4 p-4">$ <%= product.price %></div>
        <div class="col-4 p-4">
          <img src="<%= product.photo %>" alt="Imagen de producto" width="120"/>        
        </div>
        <div class="ver-producto__container">
          <button
          class="btn btn-success my-3 ver-producto"
          onclick="location.href = '/api/productos/<%= product.id %>'"
        >
          Ver producto
        </button>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>